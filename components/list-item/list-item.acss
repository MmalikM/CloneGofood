.list-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 2px solid rgb(200, 198, 198);
  margin-top: 10px;

}

.list-item-detail{
  flex: 3;
  display: flex;
  flex-direction: column;
  padding: 10px ;
}

.list-img{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-img image{
  width: 90px;
  height: 90px;
  border-radius: 10px;
}