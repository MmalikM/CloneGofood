.item-list-recomended{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10px;
  width: 40%;
  height: 500rpx;
  margin-left: 10px;
  margin-top: 10px;
  /* background-color: chartreuse; */
}

.img-unit{
  flex: 2;
  width: 90%; 
}
.img-unit image{
  width: 100%;
  height:100%;
  border-radius:15px;
  box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.2);
}